// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id       Int      @id @default(autoincrement())
  nome     String?
  email    String?  @unique
  senha    String?
  role     Role
  criadoEm DateTime @default(now())

  // Relação inversa correta para cursos do instrutor
  cursos     Curso[]      @relation("InstrutorCursos")
  feedbacks  Feedback[]   // Feedbacks deixados pelo usuário
  inscricoes Inscricao[]  // Relacionamento com os cursos em que o aluno está inscrito
}

model Curso {
  id        Int     @id @default(autoincrement())
  nome      String
  descricao String?

  instrutorId Int
  instrutor   Usuario @relation("InstrutorCursos", fields: [instrutorId], references: [id])

  modulos    Modulo[]
  feedbacks  Feedback[]
  quizzes    Quiz[]
  inscricoes Inscricao[] // Relacionamento com os alunos inscritos no curso

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Modulo {
  id           Int     @id @default(autoincrement())
  titulo       String
  tipoConteudo String
  urlConteudo  String?

  cursoId Int
  curso   Curso @relation(fields: [cursoId], references: [id])

  quizzes Quiz[]
}

model Quiz {
  id              Int    @id @default(autoincrement())
  pergunta        String
  opcoes          String
  respostaCorreta String

  moduloId Int
  modulo   Modulo @relation(fields: [moduloId], references: [id])
  curso    Curso? @relation(fields: [cursoId], references: [id])
  cursoId  Int?
}

model Feedback {
  id         Int     @id @default(autoincrement())
  avaliacao  Int
  comentario String?

  cursoId   Int
  usuarioId Int

  criadoEm DateTime @default(now())

  curso   Curso   @relation(fields: [cursoId], references: [id])
  usuario Usuario @relation(fields: [usuarioId], references: [id])
}

// Tabela de Inscrição, que faz o relacionamento entre Aluno (Usuario) e Curso
model Inscricao {
  id        Int      @id @default(autoincrement())
  userId    Int
  cursoId   Int
  createdAt DateTime @default(now())

  usuario   Usuario @relation(fields: [userId], references: [id])
  curso     Curso   @relation(fields: [cursoId], references: [id])

  @@unique([userId, cursoId]) // Garante que o aluno não possa se inscrever em um curso mais de uma vez
}

enum Role {
  ALUNO
  INSTRUTOR
}